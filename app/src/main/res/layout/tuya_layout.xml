<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tuya_Rela">
    <LinearLayout
        android:id="@+id/tuya_linear"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_weight="1"
            android:src="@mipmap/ic_create_black_48dp"
            android:id="@+id/imgview_pencil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@mipmap/ic_rubber_black_48dp"
            android:layout_weight="1"
            android:id="@+id/imgview_rubber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@mipmap/ic_reply_black_48dp"
            android:layout_weight="1"
            android:id="@+id/imgview_undo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_weight="1"
            android:src="@mipmap/ic_delete_black_48dp"
            android:id="@+id/imgview_reset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_weight="1"
            android:src="@mipmap/ic_save_black_48dp"
            android:id="@+id/imgview_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/seekbar"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tuya_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:text="橡皮大小"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp" />
        <SeekBar
            android:id="@+id/tuya_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <leon.homework.UI.TuyaView
        android:layout_marginTop="8dp"
        android:id="@+id/tuyaview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar"
        android:layout_alignParentBottom="true" />
</RelativeLayout>